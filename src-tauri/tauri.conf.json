{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Ideate",
  "version": "0.1.4",
  "identifier": "com.kevinelliott.ideate",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1450",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Ideate",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/256x256.png",
      "icons/256x256@2x.png",
      "icons/512x512.png",
      "icons/512x512@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "externalBin": [
      "binaries/outray"
    ]
  },
  "plugins": {
    "dialog": null,
    "fs": {},
    "shell": {
      "open": true
    }
  }
}
